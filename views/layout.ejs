<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || "Student Manager" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
  <div class="container">
    <a class="navbar-brand" href="/">Ученики</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <% if (currentUser) { %>
          <li class="nav-item"><a class="nav-link" href="/students">Список</a></li>
          <li class="nav-item"><a class="nav-link" href="/students/add">Добавить</a></li>
          <li class="nav-item">
            <form method="post" action="/logout" class="d-inline">
              <button class="btn btn-sm btn-outline-light">Выйти</button>
            </form>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login">Войти</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if (flash.error) { %>
    <% flash.error.forEach(m => { %>
      <div class="alert alert-danger"><%= m %></div>
    <% }) } %>
  <% if (flash.success) { %>
    <% flash.success.forEach(m => { %>
      <div class="alert alert-success"><%= m %></div>
    <% }) } %>
  <% if (flash.info) { %>
    <% flash.info.forEach(m => { %>
      <div class="alert alert-info"><%= m %></div>
    <% }) } %>

  <%- body %>
</div>

</body>
</html>
